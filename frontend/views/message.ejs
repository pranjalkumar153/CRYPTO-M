<html>

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>

<body>
    <div class="jumbotron">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item active">
                            <form action="/logout" method="POST">
                                <button type="submit" class="btn btn-primary">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
        </div>
        <div class="container" style="height:80%; margin: blue 3px solid;">
            <div class="jumbotron">
                <div class="previous_messages" style="max-height: 300px;overflow-y: scroll;">
                    <ul>
                        <% for(var i=0;i<messages.messages.length;i++){ %>
                            <%  if(messages.messages[i].response_type == "sent"){ %>
                                <li>
                                    <h5 style="color:blue; text-align:right;">
                                        <%=messages.sender%>
                                    </h5>
                                    <h6 style="color:blue; text-align:right;">
                                        <%=messages.messages[i].message%>
                                    </h6>
                                    <hr>
                                </li>
                                <%}else{%>
                                    <li>
                                        <h5 style="color:green; text-align:left;">
                                            <%=messages.receiver%>
                                        </h5>
                                        <h6 style="color:green; text-align:left;">
                                            <%=messages.messages[i].message%>
                                        </h6>
                                        <hr>
                                    </li>

                                    <%}%>
                                        <% }; %>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container" style="height:20%; margin: black 3px solid;">
            <div class="jumbotron">
                <div>
                    <form action="/send_message" method="POST">
                        <input type="text" name="message" id="message" style="width:50%;">
                        <button type="submit" class="btn btn-success">SEND</button>
                    </form>
                </div>
            </div>
        </div>


</body>

</html>